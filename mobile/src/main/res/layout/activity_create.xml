<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textColor="@color/colorAccent"
        android:textSize="32sp" />
    <EditText
        android:id="@+id/eventCreationName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="My task"
        android:singleLine="true"
        android:textSize="22sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="horizontal">


            <Button
                android:id="@+id/btn_Time"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal"
                android:text="SELECT TIME" />

            <EditText
                android:id="@+id/in_time"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_date"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal"
                android:text="SELECT DATE" />

            <EditText
                android:id="@+id/in_date"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

        </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PÃ©venir avant :"/>

        <android.support.v7.widget.AppCompatSpinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawSelectorOnTop="true"
            android:entries="@array/array_name">

        </android.support.v7.widget.AppCompatSpinner>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type"
            android:textColor="@color/colorAccent"
            android:textSize="32sp" />

        <EditText
            android:id="@+id/eventCreationType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:text="Sport"
            android:textColor="#FFFFFF" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textColor="@color/colorAccent"
            android:textSize="32sp" />

        <EditText
            android:id="@+id/eventCreationDescription"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Training"
            android:singleLine="true"
            android:textSize="22sp" />



        <Button
            android:id="@+id/eventCreationValidate"
            android:layout_width="200sp"
            android:layout_height="50sp"
            android:gravity="center_vertical|center_horizontal"
            android:text="Create"
            android:textColor="#FFFFFF" />


</LinearLayout>