<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textColor="@color/colorAccent"
        android:textSize="32sp" />
    <EditText
        android:id="@+id/eventCreationName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="My task"
        android:singleLine="true"
        android:textSize="22sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="horizontal">


            <Button
                android:id="@+id/btn_Time"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal"
                android:text="Heure de début"
                android:background="#8BD7EC"/>

            <EditText
                android:id="@+id/in_time"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <Button
                android:id="@+id/btn_date"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal"
                android:text="Date"
                android:background="#8BD7EC" />

            <EditText
                android:id="@+id/in_date"
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

        </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pévenir avant (mn) :"/>

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/timeBefore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawSelectorOnTop="true"
            android:entries="@array/array_name"
            android:textSize="32sp">

        </android.support.v7.widget.AppCompatSpinner>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type"
            android:textColor="@color/colorAccent"
            android:textSize="32sp" />

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawSelectorOnTop="true"
            android:entries="@array/array_type"
            android:textSize="32dp">

        </android.support.v7.widget.AppCompatSpinner>

    </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textColor="@color/colorAccent"
            android:textSize="32sp" />

        <EditText
            android:id="@+id/eventCreationDescription"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Training"
            android:singleLine="true"
            android:textSize="22sp" />



        <Button
            android:id="@+id/eventCreationValidate"
            android:layout_width="200sp"
            android:layout_height="50sp"
            android:gravity="center_vertical|center_horizontal"
            android:text="Create"
            android:textColor="#000000"
            android:background="#8BD7EC"/>


</LinearLayout>